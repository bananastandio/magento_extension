<?xml version="1.0"?>
<config>
    <modules>
        <Fera_Ai>
            <version>1.1.3</version>
        </Fera_Ai>
    </modules>
    <global>
        <models>
            <fera_ai>
                <class>Fera_Ai_Model</class>
            </fera_ai>
        </models>
        <blocks>
            <fera_ai>
                <class>Fera_Ai_Block</class>
            </fera_ai>
        </blocks>
        <helpers>
            <fera_ai>
                <class>Fera_Ai_Helper</class>
            </fera_ai>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <fera_ai>
                    <file>feraai.xml</file>
                </fera_ai>
            </updates>
        </layout>
        <routers>
            <fera_ai>
                <use>standard</use>
                <args>
                    <module>Fera_Ai</module>
                    <frontName>fera_ai</frontName>
                </args>
            </fera_ai>
        </routers>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <fera_ai>
                                            <title>Fera Settings</title>
                                        </fera_ai>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
