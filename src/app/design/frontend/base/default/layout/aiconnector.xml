<?xml version="1.0"?>
<layout version="1.1.0">
    <aiconnector_footer>
        <reference name="before_body_end" >
            <block type="core/template" name="aiconnector.footer" template="aiconnector/footer.phtml"></block>
        </reference>
    </aiconnector_footer>

    <catalog_product_view>
        <reference name="aiconnector.footer" >
            <block type="aiconnector/footer_product_view" name="aiconnector.footer.product.view" template="aiconnector/footer/product/view.phtml"></block>
        </reference>
    </catalog_product_view>

    <checkout_multishipping_success>
        <reference name="aiconnector.footer" >
            <block type="aiconnector/footer_checkout_success" name="aiconnector.footer.checkout.success" template="aiconnector/footer/checkout/success.phtml"></block>
        </reference>
    </checkout_multishipping_success>

    <checkout_onepage_success>
        <reference name="aiconnector.footer" >
            <block type="aiconnector/footer_checkout_success" name="aiconnector.footer.checkout.success" template="aiconnector/footer/checkout/success.phtml"></block>
        </reference>
    </checkout_onepage_success>

    <default>
        <update handle="aiconnector_footer" />
    </default>
</layout>
