<layout version="0.1.0">
    <banana_footer>
        <reference name="before_body_end" >
            <block type="core/text_list" name="bananastand.footer">
                <block type="banana/footer" name="bananastand.footer.configure" template="banana/footer/configure.phtml"></block>
            </block>
        </reference>
    </banana_footer>

    <catalog_product_view>
        <update handle="banana_footer" />
        <reference name="bananastand.footer" >
            <block type="banana/footer_product_view" name="bananastand.footer.product.view" template="banana/footer/product/view.phtml"></block>
        </reference>
    </catalog_product_view>
    
    <catalog_category_view>
        <update handle="banana_footer" />
    </catalog_category_view>
</layout>
