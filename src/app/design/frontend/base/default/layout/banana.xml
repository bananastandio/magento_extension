<?xml version="1.0"?>
<layout version="1.1.0">
    <banana_footer>
        <reference name="before_body_end" >
            <block type="core/template" name="bananastand.footer" template="banana/footer.phtml"></block>
        </reference>
    </banana_footer>

    <catalog_product_view>
        <reference name="bananastand.footer" >
            <block type="banana/footer_product_view" name="bananastand.footer.product.view" template="banana/footer/product/view.phtml"></block>
        </reference>
    </catalog_product_view>

    <checkout_multishipping_success>
        <reference name="bananastand.footer" >
            <block type="banana/footer_checkout_success" name="bananastand.footer.checkout.success" template="banana/footer/checkout/success.phtml"></block>
        </reference>
    </checkout_multishipping_success>

    <checkout_onepage_success>
        <reference name="bananastand.footer" >
            <block type="banana/footer_checkout_success" name="bananastand.footer.checkout.success" template="banana/footer/checkout/success.phtml"></block>
        </reference>
    </checkout_onepage_success>

    <default>
        <update handle="banana_footer" />
    </default>
</layout>
